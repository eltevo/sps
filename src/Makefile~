# Compilers
CXX = g++
LINK = $(CXX)

# Flags
CXXFLAGS = -I.

# Paths
BIN = ../bin
ODIR = ../bin/obj
SRC = ../src


#Build rules

$(BIN)/sps_c++ : $(ODIR)/main_c++.o  $(ODIR)/cb_data.o  $(ODIR)/table.o 
	$(LINK) -o $(BIN)/sps_c++ $(ODIR)/main_c++.o $(ODIR)/cb_data.o $(ODIR)/table.o 

$(BIN)/sps_openCL : main_openCL.o cb_data.o openCL_func.o table.o
	$(LINK) -o $(BIN)/sps_openCL $(ODIR)/main_openCL.o $(ODIR)/cb_data.o $(ODIR)/openCL_func.o $(ODIR)/table.o -lOpenCL 

main_c++.o : main_c++.cpp cb_data.h table.h
	$(CXX) -c -o $(ODIR)/main_c++.o main_c++.cpp  

main_openCL.o : main_openCL.cpp cb_data.h table.h
	$(CXX) -c   -o $(ODIR)/main_openCL.o main_openCL.cpp 

cb_data.o : cb_data.cpp cb_data.h table.h
	$(CXX)  -c -o $(ODIR)/cb_data.o cb_data.cpp 

openCL_func.o : openCL_func.cpp cb_data.h table.h
	$(CXX)  -c -o $(ODIR)/openCL_func.o openCL_func.cpp -lOpenCL  

table.o : table.cpp table.h
	$(CXX) -c  -o $(ODIR)/table.o table.cpp 
